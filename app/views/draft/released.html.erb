<div class="container">
	<h2>Released Players</h2>

	<table class="table table-striped table-hover ">
				<thead><tr>
					
  					<th>Fecha</th>
  					<th>User</th>
  					<th>Name</th>
  					<th><%= link_to "Overall", :sort => "overall" %></th>  
  					<th><%= link_to "Pos", :sort => "primary_position" %></th> 
				
  				</tr></thead>
			
  				<% @released.each do |rel| %>
  				<% player = Player.find(rel.player_id) %>
				<tbody><tr>

					<% @name = player.first_name + " "+ player.last_name%>
		  			<td><%= rel.created_at.to_date %> </td>
		  			<td><%= User.find(rel.user_id).display_name%></td>
					<td><%= link_to " ", player_path(player.id), :method => "get" , class: "glyphicon glyphicon-info-sign"%> &nbsp;&nbsp; <%= @name %></td>
		  			<td><%= player.overall %></td>
		  			<td><%= player.primary_position %> <%= player.secondary_position ? player.secondary_position : " " %></td>
		  			

		  		

  				</tr></tbody>
  				<% end %>
  			</table>
</div>
