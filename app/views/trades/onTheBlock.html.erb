<div class="container">
	<h1>Jugadores Transferibles</h1>
	<br>
	
	<table class="table table-striped table-hover ">
    	<thead><tr>
    			
    			<th> Nombre </th>
    			<th>User</th>
				<th> Overall </th>
				<th> Posici√≥n </th>
				
				
    	</tr></thead>
    	
  		<% Player.where("on_the_block='t' and user_id<>? and team_id>1",current_user.id).each do |player| %>
  		<tbody><tr>
  					
  					<td><%= link_to " ", player_path(player.id), :method => "get" , class: "glyphicon glyphicon-info-sign"%>&nbsp;&nbsp;<%= player.first_name %> <%= player.last_name %></td>
  					<td><%= link_to " ", user_path(player.user_id), :method => "get" , class: "glyphicon glyphicon-info-sign"%>&nbsp;&nbsp; <%= User.find(player.user_id).display_name %></td>
  					
					<td><%= player.overall %></td>
					<td><%= player.primary_position %> <%= player.secondary_position ? player.secondary_position : " " %></td>
				
  		</tr></tbody>
  		<% end %>
  	</table>
	
</div>


