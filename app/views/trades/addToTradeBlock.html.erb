<div class="container">
	<h1>Trades#AddToTradeBlock</h1>
	<div class="row">
		<a class="btn btn-default btn-lg" href="/trades" role="button">Volver</a>
	</div>
	<div class="row">
		<table>

			<tr>
				<th> Name </th>
				<th> Team </th>
				<th> Overall </th>
				<th> Primary Position </th>
				<th> Secondary Position </th>
				<th> Pace </th>
				<th> Shooting </th>
				<th> Dribbling </th>
				<th> Passing </th>
				<th> Heading </th>
				<th> Defence </th>
			</tr>

			<% @players.where(:team_id => 1).each do |player| %>
				<tr>
					<td><%= player.first_name %> <%= player.last_name %></td>
					<td><%= player.overall %></td>
					<td><%= player.primary_position %></td>
					<td><%= player.secondary_position %></td>
					<td><%= player.pace ? player.pace : "N/A" %></td>
					<td><%= player.shooting ? player.shooting : "N/A" %></td>
				  	<td><%= player.dribbling ? player.dribbling : "N/A" %></td>
					<td><%= player.passing ? player.passing : "N/A" %></td>
					<td><%= player.heading ? player.heading : "N/A" %></td>
					<td><%= player.defence ? player.defence : "N/A" %></td>
					<% if player.on_the_block == false %>
						#<td><a class="btn btn-default" href="/trades/new" role="button">Add to Block</a></td>
					<% else %>
						<td><a class="btn btn-default" href="/trades/new" role="button">Remove from Block</a></td>
					<% end %>
				</tr>
			<% end %>
		</table>
	</div>
</div>


