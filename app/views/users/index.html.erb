<div class="container">
<h1> Users</h1>

<table class="table table-striped table-hover ">
	<thead><tr>
		<th>Name</th>
		<th><%= link_to "Wins", :sort => "wins" %></th>  
		<th><%= link_to "Draws", :sort => "draws" %></th>  
		<th><%= link_to "Loses", :sort => "loses" %></th>  
		<th><%= link_to "GF", :sort => "gf" %></th>  
		<th><%= link_to "GA", :sort => "ga" %></th>  
		<th><%= link_to "DG", :sort => "dg" %></th>  
		<th><%= link_to "Pts", :sort => "pts" %></th>  
		<th><%= link_to "Eff", :sort => "eff" %></th>  
		<th>More Info</th>
	</tr></thead>

	<% @users.each do |user| %>
		<tbody><tr>
			<td><%= user.name %></td>
  			<td><%= user.wins%></td>
  			<td><%= user.draws%></td>
  			<td><%= user.loses%></td>
  			<td><%= user.gf%></td>
  			<td><%= user.ga%></td>
  			<td><%= user.dg%></td>
  			<td><%= user.pts%></td>
  			<td><%= user.eff%></td>
  			<td><%= link_to "Info", user_path(user.id), :method => "get" %></td>
		</tr></tbody>
	<% end %>
</table>
</div>