<div class="container">
	<h1>New User</h1>

	<%= form_for :user, url: users_path do |f| %>
		<p>
			<%= f.label :name %>
			<%= f.text_field :name %><br>

			<%= f.label :email %>
			<%= f.email_field :email %><br>

			<%= f.label :password %>
			<%= f.password_field :password %><br>
			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation %><br>
		</p>

		<p>
			<%= f.submit %>
		</p>
	<% end %>
</div>
