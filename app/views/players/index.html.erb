        <a href="players?filter=ST"><button type="button" class="btn btn-danger btn-sm">ST</button></a>

      </div>
      
      <br>
      <div class="btn-group">
        <form role="search">
        <br>
        <a href="players?filter=drafted"><button type="button" class="btn btn-default btn-sm">Drafted</button></a> &nbsp;
        <a href="players?filter=undrafted"><button type="button" class="btn btn-default btn-sm">Undrafted</button></a>&nbsp;&nbsp;
        
          <%= form_tag('/search', id: "search-form") do %>    
                <%= text_field_tag :filter, "", placeholder: "Search" %>
                <button class="btn btn-sm btn-success" type="submit">Search</button>
          <% end %>
        </form>
        

      </div>

  </div>
  <br>
  <table class="table table-striped table-hover ">
    	<br>
      <thead><tr>
        
    		<th>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Name</th>
    		<th>Overall</th>
    		<th>Posici√≥n</th>
    		<th>Equipo</th>
    		<th>User</th>
        <th></th>
    	</tr></thead>
    	
  		<% @players.each do |player| %>
      <% if player.user_id==1 %>
    		<tbody><tr>
          <% if player.first_name != "" %>
            <% @name = player.first_name.to_s + " "+player.last_name.to_s %>

          <% else %>
            <% @name = player.last_name %>

    			<% end %> 
          <td><%= link_to "", player_path(player.id), :method => "get" , class: "glyphicon glyphicon-info-sign right"%>&nbsp;&nbsp;&nbsp;<%= @name %></td>
    			<td><%= player.overall %></td>
    			<td><%= player.primary_position %> <%= player.secondary_position ? player.secondary_position : " " %></td>
    			<td><%= player.team.name %></td>
    			<td><%= player.team.user.display_name %></td>
          <% if next_pick==nil %>
            <% @nextID=0 %>
          <% else %>
            <% @nextID=next_pick.user_id %>
          <% end  %>
          <% if current_user==nil %>
            <% @loggedUser=0 %>
          <% else %>
            <% @loggedUser=current_user.id %>
          <% end  %>
          <% if (@nextID == @loggedUser and player.team_id==1 ) or (@loggedUser ==10 or @loggedUser==7) %>
              <% @link = "/draft/draftPlayer?id="+player.id.to_s %>
              <td><%= link_to "Draft", @link%></td>
          <% else %>
              <% if player.team_id!=1 and @nextID == @loggedUser %>
                <td>Drafted</td>
              <% end %>
          <% end %>
          <% if (@nextID != @loggedUser and player.team_id==1 ) %>
              <% @link = "/draft/addWanted?player_id="+player.id.to_s %>
              <td><%= link_to "Lo Quiero!", @link%></td>
          <% end %>
    		</tr></tbody>
      <% else %>
        <tbody><tr class="danger">
          <% if player.first_name == "" %>
            <% @name = player.last_name %>
          <% else %>
            <% @name = player.first_name.to_s + " "+player.last_name.to_s %>
          <% end %> 
          <td><%= link_to "", player_path(player.id), :method => "get" , class: "glyphicon glyphicon-info-sign right"%>&nbsp;&nbsp;&nbsp;<%= @name %></td>
          <td><%= player.overall %></td>
          <td><%= player.primary_position %> <%= player.secondary_position ? player.secondary_position : " " %></td>
          <td><%= player.team.name %></td>
          <td><%= player.team.user.display_name %></td>
          <% if next_pick==nil %>
            <% @nextID=0 %>
          <% else %>
            <% @nextID=next_pick.user_id %>
          <% end  %>
          <% if current_user==nil %>
            <% @loggedUser=0 %>
          <% else %>
            <% @loggedUser=current_user.id %>
          <% end  %>
          <% if (@nextID == @loggedUser and player.team_id==1 ) or (@loggedUser ==10 or @loggedUser==7) %>
              <% @link = "/draft/draftPlayer?id="+player.id.to_s %>
              <td><%= link_to "Draft", @link%></td>

          <% else %>
              <% if player.team_id!=1 and @nextID == @loggedUser %>
                <td>Drafted</td>
              <% end %>
          <% end %>
        </tr></tbody>
      <% end %>
  		<% end %>
  	</table>



 

	
</div>