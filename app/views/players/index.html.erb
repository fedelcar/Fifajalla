        <a href="players?filter=LW"><button type="button" class="btn btn-danger btn-sm">LW</button></a>
        <a href="players?filter=CF"><button type="button" class="btn btn-danger btn-sm">CF</button></a>
        <a href="players?filter=ST"><button type="button" class="btn btn-danger btn-sm">ST</button></a>

      </div>

  </div>
  <br>
  <table class="table table-striped table-hover ">
    	<br>
      <thead><tr>
        <th></th>
    		<th>Name</th>
    		<th>Overall</th>
    		<th>Position</th>
    		<th>Team</th>
    		<th>User</th>
        <th></th>
    	</tr></thead>
    	
  		<% @players.each do |player| %>
  		<tbody><tr>
        <% @name = player.first_name + " "+player.last_name %>
  			<td><right><%= link_to "", player_path(player.id), :method => "get" , class: "glyphicon glyphicon-info-sign right"%></right></td>
        <td></left><%= @name %></left></td>
  			<td><%= player.overall %></td>
  			<td><%= player.primary_position %> <%= player.secondary_position ? player.secondary_position : " " %></td>
  			<td><%= player.team.name %></td>
  			<td><%= player.team.user.display_name %></td>
        <% if next_pick.user_id == current_user.id and player.team_id==1 %>
            <% @link = "/draft/draftPlayer?id="+player.id.to_s %>
            <td><%= link_to "Draft", @link%></td>
        <% else %>
            <% if player.team_id!=1 and next_pick.user_id == current_user.id %>
              <td>Drafted</td>
            <% end %>
        <% end %>
  		</tr></tbody>
  		<% end %>
  	</table>



 

	
</div>