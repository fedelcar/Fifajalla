        <a href="players?filter=med"><button type="button" class="btn btn-success btn-sm">MED</button></a>
        <a href="players?filter=fw"><button type="button" class="btn btn-danger btn-sm">FW</button></a> &nbsp;
        <a href="players?filter=RB"><button type="button" class="btn btn-primary btn-sm">RB</button></a>
        <a href="players?filter=RWB"><button type="button" class="btn btn-primary btn-sm">RWB</button></a>
        <a href="players?filter=CB"><button type="button" class="btn btn-primary btn-sm">CB</button></a>
        <a href="players?filter=LB"><button type="button" class="btn btn-primary btn-sm">LB</button></a>
        <a href="players?filter=LWB"><button type="button" class="btn btn-primary btn-sm">LWB</button></a>
        <a href="players?filter=CDM"><button type="button" class="btn btn-success btn-sm">CDM</button></a>
        <a href="players?filter=CM"><button type="button" class="btn btn-success btn-sm">CM</button></a>
        <a href="players?filter=CAM"><button type="button" class="btn btn-success btn-sm">CAM</button></a>
        <a href="players?filter=RM"><button type="button" class="btn btn-success btn-sm">RM</button></a>
