        <a href="players?filter=RB"><button type="button" class="btn btn-primary btn-sm">RB</button></a>
        <a href="players?filter=RWB"><button type="button" class="btn btn-primary btn-sm">RWB</button></a>
        <a href="players?filter=CB"><button type="button" class="btn btn-primary btn-sm">CB</button></a>
