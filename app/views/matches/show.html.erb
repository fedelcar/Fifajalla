<div class="container">
	<div class="col-sm-4">
		<br>
		<div class="row">
			<center>
				<h1>
					<%= link_to @team_local.name, team_path(@team_local.id), :method => "get" %>
				</h1>
			</center>
			<center>
				<h2>
					<%= link_to @user_local.name, user_path(@user_local.id), :method => "get" %>
				</h2>
			</center>
		</div>
		<div class="row">
			<br>
			<br>
			<br>
			<br>
			<br>
			<br>
			<br>
			<br>
			<h3>Fecha: <%= @match.date%></h3>
			<h3>MVP: <%= @pom%></h3>
		</div>


	</div>

	<div class="col-sm-4">
		<br>
		<div class="row">
			<br>
			<h1><font size= "7"><center><%= @match.local_goals %>   -    <%=  @match.away_goals %></center></font></h1>
		</div>

		<br>
		<br>

		<div class="row">
			<h1><center><p class="text-primary">Goles</p></center></h1>
			
			<div class="col-sm-6">
				<% @goals.each do |goal| %>
					<% if @players_local.where("id=?",goal.player_id).exists? %>
						<font color="black"><center><p>
							<%= link_to @players_local.find(goal.player_id).last_name, player_path(@players_local.find(goal.player_id)), :method => "get", class:"h4" %>
						</p></center></font>
					<% end %>
				<% end %>
			</div>
			<div class="col-sm-6">
				<% @goals.each do |goal| %>
					<% if @players_visitante.where("id=?",goal.player_id).exists? %>
						<font color="black"><center><p>
							<%= link_to @players_visitante.find(goal.player_id).last_name, player_path(@players_visitante.find(goal.player_id)), :method => "get", class:"h4" %>
						</p></center></font>
					<%end%>
				<% end %>
			</div>
		</div>
		
		<div class="row">
			<h2><center><p class="text-primary">Asistencias</p></center></h2>
			<div class="col-sm-6">
				<% @assists.each do |assist| %>
					<% if @players_local.where("id=?",assist.player_id).exists? %>
						
						<font color="black"><center><p>
							<%= link_to @players_local.find(assist.player_id).last_name, player_path(@players_local.find(assist.player_id)), :method => "get", class:"h4" %>
						</p></center></font>
					<% end %>
				<% end %>
			</div>
			<div class="col-sm-6">
				<% @assists.each do |assist| %>
					<% if @players_visitante.where("id=?",assist.player_id).exists? %>
						<font color="black"><center><p>
							<%= link_to @players_visitante.find(assist.player_id).last_name, player_path(@players_visitante.find(assist.player_id)), :method => "get", class:"h4" %>
						</p></center></font>
					<%end%>
				<% end %>
			</div>
		</div>

		<div class="row">
			<h2><center><p class="text-primary">Amonestaciones</p></center></h2>
			<div class="col-sm-6">
				<% @yellow_cards.each do |yellow_card| %>
					<% if @players_local.where("id=?",yellow_card.player_id).exists? %>
						<font color="black"><center><p>
							<%= link_to @players_local.find(yellow_card.player_id).last_name, player_path(@players_local.find(yellow_card.player_id)), :method => "get", class:"h4" %>
						</p></center></font>
					<% end %>
				<% end %>
			</div>
			<div class="col-sm-6">
				<% @yellow_cards.each do |yellow_card| %>
					<% if @players_visitante.where("id=?",yellow_card.player_id).exists? %>
						<font color="black"><center><p>
							<%= link_to @players_visitante.find(yellow_card.player_id).last_name, player_path(@players_visitante.find(yellow_card.player_id)), :method => "get", class:"h4" %>
						</p></center></font>
					<%end%>
				<% end %>
			</div>
		</div>

		<div class="row">
			<h2><center><p class="text-primary">Expulsiones</p></center></h2>
			<div class="col-sm-6">
				<% @red_cards.each do |red_card| %>
					<% if @players_local.where("id=?",red_card.player_id).exists? %>
						<font color="black"><center><p>
							<%= link_to @players_local.find(red_card.player_id).last_name, player_path(@players_local.find(red_card.player_id)), :method => "get", class:"h4" %>
						</p></center></font>
					<% end %>
				<% end %>
			</div>
			<div class="col-sm-6">
				<% @red_cards.each do |red_card| %>
					<% if @players_visitante.where("id=?",red_card.player_id).exists? %>
						<font color="black"><center><p>
							<%= link_to @players_visitante.find(red_card.player_id).last_name, player_path(@players_visitante.find(red_card.player_id)), :method => "get", class:"h4" %>
						</p></center></font>
					<%end%>
				<% end %>
			</div>
		</div>
		
	</div>

	<div class="col-sm-4">
		<br>
		<div class="row">
			<center><h1><%= link_to @team_visitante.name, team_path(@team_visitante.id), :method => "get" %></h1>
			<center><h2><%= link_to @user_visitante.name, user_path(@user_visitante.id), :method => "get" %></h>
			</center>
		</div>
		

		
	</div>
</div>