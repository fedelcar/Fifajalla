<div class="container">
	<table class="table table-striped table-hover ">
    	<br>
      <h1>Team List</h1>
      <thead><tr>
        
    		<th>Name</th>
    		<th>User</th>
        <th>PJ</th>
    		<th><%= link_to "Wins", :sort => "wins" %></th>  
    		<th><%= link_to "Draws", :sort => "draws" %></th>  
    		<th><%= link_to "Loses", :sort => "loses" %></th>  
    		<th><%= link_to "GF", :sort => "gf" %></th>  
    		<th><%= link_to "GA", :sort => "ga" %></th>  
    		<th><%= link_to "DG", :sort => "dg" %></th>  
    		<th><%= link_to "Pts", :sort => "pts" %></th>
        <th>Eff</th>
        <th>Amarillas</th>  
        <th>Rojas</th>  

    	</tr></thead>
    	
  		<% @teams.each do |team| %>
  		<tbody><tr>
        
        <td><%= link_to "", team_path(team.id), :method => "get" , class: "glyphicon glyphicon-info-sign"%>&nbsp;&nbsp;<%= team.name %></td>
  			<td><%= link_to "", user_path((User.find(team.user_id)).id), :method => "get" , class: "glyphicon glyphicon-info-sign"%> &nbsp;&nbsp;  <%= User.find(team.user_id).display_name %>
  			<td><%= team.wins + team.loses + team.draws %></td>
        <td><%= team.wins %></td>
  			<td><%= team.draws %></td>
  			<td><%= team.loses %></td>
  			<td><%= team.gf %></td>
  			<td><%= team.ga %></td>
  			<td><%= team.gf-team.ga %></td>
  			<td><%= team.wins*3+team.draws	 %></td>
        <% if team.wins + team.loses + team.draws >0 %>
          <td><%= number_to_percentage((team.wins*3.0+team.draws)  / ((team.wins + team.loses + team.draws)*3.0)*100,precision:2) %></td>
        <% else %>
          <td>0.00%</td>
        <% end %>
        <% @amarillas=0 %>
        <% @rojas=0 %>
        <% @players = Player.where("team_id=?",team.id) %>
        <% @players.each do |p| %>  
          <% @amarillas=@amarillas+p.yellow_cards%>
          <% @rojas=@rojas+p.red_cards %>
        <% end %>
        <td><%= @amarillas%></td>
        <td><%= @rojas%></td>
  		</tr></tbody>
  		<% end %>
  	</table>



 

	
</div>