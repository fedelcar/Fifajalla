<div class="container">
	<table class="table table-striped table-hover ">
    	<br>
      <h1>Team List</h1>
      <thead><tr>
        <th>
    		<th>Name</th>
    		<th>User</th>
    		<th><%= link_to "Wins", :sort => "wins" %></th>  
    		<th><%= link_to "Draws", :sort => "draws" %></th>  
    		<th><%= link_to "Loses", :sort => "loses" %></th>  
    		<th><%= link_to "GF", :sort => "gf" %></th>  
    		<th><%= link_to "GA", :sort => "ga" %></th>  
    		<th><%= link_to "DG", :sort => "dg" %></th>  
    		<th><%= link_to "Pts", :sort => "pts" %></th>  

    	</tr></thead>
    	
  		<% @teams.each do |team| %>
  		<tbody><tr>
        <td><font color="black"><%= link_to "", team_path(team.id), :method => "get" , class: "glyphicon glyphicon-info-sign"%></font></td>
        <td><%= team.name %></td>
  			<td><%= team.user.name %></td>
  			<td><%= team.wins %></td>
  			<td><%= team.draws %></td>
  			<td><%= team.loses %></td>
  			<td><%= team.gf %></td>
  			<td><%= team.ga %></td>
  			<td><%= team.gf-team.ga %></td>
  			<td><%= team.wins*3+team.draws	 %></td>
  		</tr></tbody>
  		<% end %>
  	</table>



 

	
</div>