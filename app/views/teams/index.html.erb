<div class="container">
	<table class="table table-striped table-hover ">
    	<br>
      <h1>Equipos</h1>
      <thead><tr>

    		<th>Equipo</th>
    		<th>Usuario</th>
				<th><%= link_to "PJ", :sort => "wins" %></th>
				<th><%= link_to "PG", :sort => "wins" %></th>
				<th><%= link_to "PE", :sort => "draws" %></th>
				<th><%= link_to "PP", :sort => "loses" %></th>
				<th><%= link_to "Pts", :sort => "pts" %></th>
				<th><%= link_to "Eff", :sort => "eff" %></th>
				<th><%= link_to "GF", :sort => "gf" %></th>
				<th><%= link_to "GC", :sort => "ga" %></th>
				<th><%= link_to "DG", :sort => "dg" %></th>
        <th><%= link_to "Amarillas", :sort => "amarillas" %></th>
				<th><%= link_to "Rojas", :sort => "rojas" %></th>

    	</tr></thead>

  		<% @teams.each do |team| %>
  		<tbody><tr>
        <td><%= link_to "", team_path(team.id), :method => "get" , class: "glyphicon glyphicon-info-sign"%>&nbsp;&nbsp;<%= team.name %></td>
  			<td><%= link_to "", user_path(team.user_id), :method => "get" , class: "glyphicon glyphicon-info-sign"%> &nbsp;&nbsp;  <%= User.find(team.user_id).display_name %>
				<td><%= @pj[team.id] %></td>
				<td><%= @pg[team.id] %></td>
				<td><%= @pe[team.id] %></td>
				<td><%= @pp[team.id] %></td>
				<td><%= @pts[team.id] %></td>
				<td><%= number_to_percentage(@eff[team.id]*100, precision: 2) %></td>
				<td><%= @gf[team.id] %></td>
				<td><%= @gc[team.id] %></td>
				<td><%= @dg[team.id] %></td>

        <% @amarillas=0 %>
        <% @rojas=0 %>
        <% @players = Player.where("team_id=?",team.id) %>
        <% @players.each do |p| %>
          <% @amarillas=@amarillas+p.yellow_cards%>
          <% @rojas=@rojas+p.red_cards %>
        <% end %>
        <td><%= @amarillas%></td>
        <td><%= @rojas%></td>
  		</tr></tbody>
  		<% end %>
  	</table>






</div>
