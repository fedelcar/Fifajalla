<div class="container">
	<h1>Register Team</h1>
	<br>
<form class="form-horizontal row-sm-7" action="/teams" method="post">


<div style="display:none"><input name="utf8" type="hidden" value="&#x2713;" /><input name="_method" type="hidden" value="post" /></div>
			 <fieldset>
			    <div class="form-group col-sm-8">
			      	<div class="row">
			      	<div class="col-sm-1"><label for="name" class="control-label">Name:</label> </div>
			      	<div class="col-sm-4"><input type="text" class="form-control" id="name" name="name" placeholder="Team Name"></div>
				    </div>
				    <div class="row">
				    </br>
					<div class="col-sm-1"><label for="name" class="control-label">User:</label> </div>
					<div class="col-sm-4"><select class="form-control" input id="user" name="user"></div>
						<% @users.each do |u| %>
						   	<option><%= u.display_name %></option>
					    <% end %>
					</select>
					</div>
					<div class="row">
			      	<div class="col-sm-8">
			      		<br>
			        	<button class="btn btn-default">Cancel</button>
			        	<button class="btn btn-success" type="submit" name="commit" value="Save Team">Submit</button>
			      	</div>
			      	</div>
			    </div>
			</fieldset>
		</form>
</div>
